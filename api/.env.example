# PaieCashFan API Configuration

# Server
NODE_ENV=development
PORT=3000

# JWT
JWT_SECRET=paiecashfan-secret-key-2026-change-in-production
JWT_EXPIRATION=7d

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/paiecashfan_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Blockchain
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137
WALLET_PRIVATE_KEY=

# eSIM Provider (Twilio / eSIM Go)
ESIM_API_KEY=
ESIM_API_SECRET=
ESIM_WEBHOOK_URL=

# Payment Gateway
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# AI / ML
OPENAI_API_KEY=
AI_MODEL=gpt-4

# AWS S3 (Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=paiecashfan-uploads
AWS_REGION=eu-west-1

# Email (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@paiecashfan.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000,https://paiecashfan.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
